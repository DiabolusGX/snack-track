{
    "manifest_version": 3,
    "name": "snack-track",
    "description": "Track your food delivery orders from Zomato",
    "version": "1.1.5",
    "action": {
        "default_icon": {
            "16": "public/logo16.png",
            "32": "public/logo32.png",
            "48": "public/logo32.png",
            "128": "public/logo192.png"
        }
    },
    "icons": {
        "16": "public/logo16.png",
        "32": "public/logo32.png",
        "48": "public/logo32.png",
        "128": "public/logo192.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.zomato.com/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": [
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "*://*.zomato.com/*"
    ]
}